<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:imageButtonStyle">@style/ImageButtons</item>
        <item name="android:buttonStyle">@style/ImageButtons</item>

    </style>

    <style name="AppTheme_DARK" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:imageButtonStyle">@style/ImageButtons</item>
        <item name="android:buttonStyle">@style/ImageButtons</item>
    </style>




    <style name="ImageButtons" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
